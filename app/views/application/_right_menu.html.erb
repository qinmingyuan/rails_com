<%= render partial: 'shared/locales' %>
<%= render partial: 'notice_link' %>
<% if defined?(current_user) && current_user %>
  <div class="navbar-item has-dropdown is-hoverable is-right">
    <div class="navbar-link">
      <%= image_tag current_user.avatar, class: 'ui avatar image' if current_user.avatar.attached? %>
      <%= current_user.name %>
    </div>
    <div class="navbar-dropdown">
      <%= link_to '个人中心', '/my', class: active_helper(controllers: ['users']) %>
      <%= link_to '管理', '/panel', class: 'navbar-item' %>
      <%= link_to '退出', logout_path, data: { confirm: '确认退出' }, remote: true, class: 'navbar-item' %>
    </div>
  </div>
<% elsif defined?(RailsAuth) %>
  <%= link_to sign_path, class: 'navbar-item' do %>
    <i class="fas fa-user"></i>
    <span>登陆/注册</span>
  <% end %>
<% end %>
