<div class="image">
  <%= link_to admin_attachment_path(image.id), method: :delete, data: {confirm: t('.confirm')}, remote: true, class: 'button is-danger as-corner' do %>
    <i class="fas fa-trash-alt"></i>
  <% end %>
  <%= image_tag image.variant(resize_to_limit: [300, 300]), id: "attachment_#{image.id}", data: { target: 'picture.src' }, style: 'max-width: 100%' %>
</div>
