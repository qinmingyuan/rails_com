<div class="ui top attached segment">
  <%= render 'filter' %>
</div>

<table class="table is-hoverable">
  <thead>
    <tr>
      <th><%= CacheList.human_attribute_name(:id) %></th>
      <th><%= CacheList.human_attribute_name(:path) %></th>
      <th><%= CacheList.human_attribute_name(:key) %></th>
      <th><%= CacheList.human_attribute_name(:etag) %></th>
      <th>
        <%= link_to new_admin_cache_list_path, remote: true, class: 'ui mini primary button' do %>
          <i class="fas fa-plus"></i><%= t('.new') %>
        <% end %>
      </th>
    </tr>
  </thead>
  <tbody>
  <% @cache_lists.each do |cache_list| %>
    <tr>
      <td><%= cache_list.id %></td>
      <td><%= cache_list.path %></td>
      <td><%= cache_list.key %></td>
      <td><%= cache_list.etag %></td>
      <td>
        <%= link_to admin_cache_list_path(cache_list), data: { tooltip: t('.show') }, remote: true, class: 'ui mini circular icon button' do %>
          <i class="fas fa-eye"></i>
        <% end %>
        <%= link_to edit_admin_cache_list_path(cache_list), data: { tooltip: t('.edit') }, remote: true, class: 'ui mini circular icon button' do %>
          <i class="fas fa-pencil-alt"></i>
        <% end %>
        <%= link_to admin_cache_list_path(cache_list), method: :delete, data: { tooltip: t('.destroy'), confirm: t('.confirm') }, remote: true, class: 'ui mini circular icon button' do %>
          <i class="fas fa-trash"></i>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @cache_lists %>
