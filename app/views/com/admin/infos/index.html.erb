<div class="ui top attached segment">
  <%= render 'filter' %>
</div>

<table class="table is-hoverable is-fullwidth">
  <thead>
    <tr>
      <th><%= Info.human_attribute_name(:id) %></th>
      <th><%= Info.human_attribute_name(:code) %></th>
      <th><%= Info.human_attribute_name(:value) %></th>
      <th><%= Info.human_attribute_name(:platform) %></th>
      <th><%= Info.human_attribute_name(:version) %></th>
      <th>
        <%= link_to new_admin_info_path, remote: true, class: 'ui mini primary button' do %>
          <i class="fas fa-plus"></i><%= t('.new') %>
        <% end %>
      </th>
    </tr>
  </thead>
  <tbody>
  <% @infos.each do |info| %>
    <tr>
      <td><%= info.id %></td>
      <td><%= info.code %></td>
      <td><%= info.value %></td>
      <td><%= info.platform_i18n %></td>
      <td><%= info.version %></td>
      <td>
        <%= link_to edit_admin_info_path(info), aria: { label: t('.edit') }, remote: true, class: 'button is-small is-rounded is-light' do %>
          <i class="fas fa-pencil-alt"></i>
        <% end %>
        <%= link_to admin_info_path(info), method: :delete, aria: { label: t('.destroy') }, data: { confirm: t('.confirm') }, remote: true, class: 'button is-small is-rounded is-light' do %>
          <i class="fas fa-trash"></i>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @infos %>
