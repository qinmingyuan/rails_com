<tr id="tr_<%= model.id %>" data-controller="show" data-action="mouseenter->show#show mouseleave->show#hide">
  <%= yield %>
  <td>
    <turbo-frame data-show-target="item" style="visibility: hidden">
      <%= link_to panel_blob_path(model), method: :delete, aria: { label: t('.destroy') }, data: { confirm: t('.confirm') }, class: 'button is-small is-rounded is-light' do %>
        <i class="fas fa-trash-alt"></i>
      <% end %>
      <%= link_to rails_ext_audio_path(model.id), target: '_blank', aria: { label: t('.play') }, class: 'button is-small is-rounded is-light' do %>
        <i class="fas fa-play"></i>
      <% end %>
    </turbo-frame>
  </td>
</tr>
