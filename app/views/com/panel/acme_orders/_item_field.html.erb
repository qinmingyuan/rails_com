<div class="field is-horizontal" id="card_template_advances_<%= index %>">
  <% if index == 0 %>
    <%= f.label :identifiers %>
  <% else %>
    <label class="field-label"></label>
  <% end %>
  <div class="field-body">
    <%= text_field_tag 'acme_order[identifiers][]', value %>
    <div class="field has-addons has-addons-middle">
      <%= link_to add_item_panel_acme_account_orders_path(index: index), data: { title: 'add_item' }, remote: true do %>
        <i class="fas fa-plus-circle"></i>
      <% end %>
      <%= link_to remove_item_panel_acme_account_orders_path(index: index), remote: true do %>
        <i class="fas fa-minus-circle"></i>
      <% end %>
    </div>
  </div>
</div>
