<%= form_with model: @acme_order, url: { action: 'update' } do |f| %>
  <%= render 'shared/error_messages', target: @acme_order %>
  <%= f.fields :acme_identifiers, wrap: { all: nil, input: 'field' }, label: false, placeholder: true do |ef| %>
    <%= render partial: 'item_form', locals: { ef: ef } %>
  <% end %>
  <%= f.submit %>
<% end %>
