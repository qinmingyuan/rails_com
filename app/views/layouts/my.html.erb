<%= render layout: 'layouts/application_head' do %>
  <%= render 'nav_bar' %>
  <main class="columns">
    <div class="column is-narrow" style="width: 260px;">
      <% if content_for?(:nav) %>
        <%= yield :nav %>
      <% else %>
        <%= render 'nav' %>
      <% end %>
    </div>
    <div class="column">
      <% if content_for?(:breadcrumb) %>
        <%= yield(:breadcrumb) %>
      <% else %>
        <%= render 'breadcrumb' %>
      <% end %>
      <div>
        <%= yield %>
      </div>
    </div>
  </main>
  <%= render 'footer' %>
<% end %>
