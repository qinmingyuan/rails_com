<!DOCTYPE html>
<html lang="<%= I18n.locale %>">
  <head>
    <title><%= content_for?(:title) ? yield(:title) : t('site_name') %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="turbolinks-cache-control" content="no-preview">
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= css_load media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= js_ready 'data-turbolinks-track': 'reload' %>
    <%= csrf_meta_tags %>
    <%= action_cable_meta_tag %>
  </head>
  <body>
    <%= render 'nav_bar' %>
    <main class="columns">
      <div class="column is-2" style="width: 260px;">
        <% if content_for?(:nav) %>
          <%= yield :nav %>
        <% else %>
          <%= render 'nav' %>
        <% end %>
      </div>
      <div class="column is-10">
        <div class="main">
          <%= yield %>
        </div>
        <%= render 'footer' %>
      </div>
    </main>
    <div id="modal"></div>
    <%= js_load %>
    <%= javascript_pack_tag 'footer' %>
  </body>
</html>
