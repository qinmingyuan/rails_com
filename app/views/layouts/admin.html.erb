<!DOCTYPE html>
<html lang="<%= I18n.locale %>">
  <head>
    <% if content_for?(:title) %>
      <title><%= yield(:title) %></title>
    <% else %>
      <title><%= current_title %></title>
    <% end %>
    <meta name="turbolinks-cache-control" content="no-preview">
    <%= stylesheet_packs_with_chunks_tag 'admin/application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= css_load media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'admin/application', 'data-turbolinks-track': 'reload' %>
    <%= js_ready 'data-turbolinks-track': 'reload' %>
    <%= csrf_meta_tags %>
    <%= action_cable_meta_tag %>
    <%= csp_meta_tag %>
  </head>
  <body>
    <%= render 'nav_bar' %>
    <main class="columns">
      <div class="column is-narrow" style="width:260px;">
        <%= render 'nav' %>
      </div>
      <div class="column as-body">
        <% if content_for?(:breadcrumb) %>
          <div class="breadcrumb has-succeeds-separator">
            <%= yield(:breadcrumb) %>
          </div>
        <% else %>
          <%= render 'breadcrumb' %>
        <% end %>
        <%= yield %>
      </div>
    </main>
    <div id="modal"></div>
    <%= js_load %>
    <%= javascript_pack_tag 'footer' %>
  </body>
</html>

